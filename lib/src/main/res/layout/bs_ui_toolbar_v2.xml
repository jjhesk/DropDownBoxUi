<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_bar_height">

    <ImageButton
        android:id="@id/hkmspinnersheet_back"
        style="@style/basicRippleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        android:scaleType="centerInside"
        android:src="@drawable/ic_back_adjusted" />

    <RelativeLayout
        android:id="@id/hkmspinnersheet_center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/hkmspinnersheet_back">

        <EditText
            android:id="@id/hkmspinnersheet_editor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:singleLine="true"
            android:visibility="gone" />

        <TextView
            android:id="@id/hkmspinnersheet_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="left|center_vertical"
            android:textSize="20sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@id/hkmspinnersheet_rightside"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentRight="true">

        <ImageButton
            android:id="@id/hkmspinnersheet_confirm"
            style="@style/basicRippleButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:src="@drawable/ic_check_tick"
            android:visibility="gone" />

        <ProgressBar
            android:id="@id/hkmspinnersheet_loader"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_centerInParent="true"
            android:visibility="gone" />
    </RelativeLayout>


</RelativeLayout>

