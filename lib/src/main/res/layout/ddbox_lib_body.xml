<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:pixlui="http://schemas.android.com/apk/com.neopixl.pixlui"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/button_face"
    android:layout_height="match_parent"
    android:layout_width="wrap_content"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:fadingEdge="horizontal">

    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/hb_empty" />

    <com.neopixl.pixlui.components.textview.TextView
        android:textColor="@color/box_text"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/demo"
        pixlui:copyandpaste="false"
        android:gravity="center_vertical"
        pixlui:clearclipboardcontent="true" />
    <!-- pixlui:typeface="GearedSlab.ttf"-->
    <com.neopixl.pixlui.components.imageview.ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/dropdown_menu_arrow"
        android:scaleType="centerInside"
        android:layout_centerVertical="true"
        android:layout_marginRight="7dp"
        android:layout_marginLeft="7dp"
        android:layout_alignParentRight="true" />
</RelativeLayout>
