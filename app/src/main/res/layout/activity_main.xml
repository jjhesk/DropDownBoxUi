<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/selection_holder"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

    </LinearLayout>

    <Button
        android:id="@+id/button_redraw"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ui_button_height"
        android:layout_below="@id/selection_holder"
        android:gravity="center_horizontal"
        android:text="redraw" />

    <Button
        android:id="@+id/button_error"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ui_button_height"
        android:layout_below="@id/button_redraw"
        android:gravity="center_horizontal"
        android:text="trigger error" />

    <Button
        android:id="@+id/button_addcart"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ui_button_height"
        android:layout_below="@id/button_error"
        android:gravity="center_horizontal"
        android:text="Add Cart" />

</RelativeLayout>
